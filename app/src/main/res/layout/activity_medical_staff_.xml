<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#54d7cc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.safetylifeproperty.slpro.slp.PatientActivity">
    <TextView
        android:id="@+id/pa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAFETY\n  LIFE\n PROPERTY"
        android:textColor="#FFFFFF"
        android:textSize="70dp"
        android:lineSpacingExtra ="0dp"
        android:lineSpacingMultiplier ="0.7"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:shadowRadius="5.0"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowColor="#000000"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#00729f"
        android:layout_margin="30dp"
        android:layout_below="@+id/pa1"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/k6"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2" />

    <TextView
        android:id="@+id/medical_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_marginRight="10dp"
        android:text="의료진용"
        android:layout_above="@+id/editText2"
        android:layout_toEndOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/btnstyle"
        android:layout_marginRight="5dp"
        android:hint="비밀번호"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/btnstyle"
        android:ems="13"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editText"
        android:layout_toStartOf="@+id/relativeLayout4"
        android:layout_marginEnd="10dp">
        <Button
            android:id="@+id/Find_id_pw"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00729f"
            android:textColor="#ffffff"
            android:text="ID.PW 찾기" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginEnd="30dp"
        android:id="@+id/relativeLayout4">
        <Button
            android:id="@+id/Sign_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00729f"
            android:textColor="#ffffff"
            android:text="회 원 가 입"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_alignEnd="@+id/relativeLayout4">
        <Button
            android:id="@+id/button5"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00729f"
            android:text="로그인" />
    </RelativeLayout>




</RelativeLayout>
